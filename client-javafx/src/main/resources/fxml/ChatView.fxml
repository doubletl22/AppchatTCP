<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatclient.controller.ChatController" prefHeight="600" prefWidth="800">
    <center>
        <ListView fx:id="messageListView" />
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" promptText="Type a message or command..." onAction="#handleSendMessage" />
            <Button fx:id="sendButton" onAction="#handleSendMessage" text="Send" />
        </HBox>
    </bottom>
</BorderPane>